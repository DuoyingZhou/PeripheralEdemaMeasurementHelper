<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg8"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"



    tools:context="com.example.zhoud.iotproject4.LoginActivity"
    >

    <ImageView
        android:id="@+id/heartbeatbackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="250dp"
        app:srcCompat="@drawable/loveheartbeat"


        />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="356dp"
        android:layout_height="44dp"
        android:hint=" Username"
        android:padding="10dp"
        android:background="@drawable/edittext_top_bg"
        android:inputType="textPersonName"

        android:textColorHint="#cccccc"
        android:drawableLeft="@drawable/user"
        android:layout_above="@+id/etpassword"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp" />

    <EditText
        android:id="@+id/etpassword"
        android:layout_width="356dp"
        android:layout_height="44dp"

        android:hint="Password"
        android:padding="10dp"
        android:background="@drawable/edittext_bottom_bg"
        android:inputType="textPassword"

        android:textColorHint="#cccccc"
        android:drawableLeft="@drawable/password"


        android:layout_above="@+id/btnLogin"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="150dp"
        android:layout_height="45dp"

        android:text="Login"
        android:background="@drawable/loginbutton_bgtest2"
        style="@style/DefaultButtonText"

        android:layout_above="@+id/tvRegister"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="DON'T HAVE AN ACCOUNT? REGISTER HERE"
       android:layout_marginTop="20dp"
 android:layout_centerHorizontal="true"
        android:textColor="#ff000000"
        android:textSize="16sp"
        android:layout_marginBottom="76dp"
        android:layout_alignParentBottom="true"
        />




</RelativeLayout>
