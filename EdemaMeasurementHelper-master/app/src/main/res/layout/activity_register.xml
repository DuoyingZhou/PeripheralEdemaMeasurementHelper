<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg8"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"



    tools:context="com.example.zhoud.iotproject4.LoginActivity"
    >

    <ImageView
        android:id="@+id/heartbeatbackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="250dp"
        app:srcCompat="@drawable/loveheartbeat"


        />
    <EditText
        android:id="@+id/etname"
        android:layout_width="356dp"
        android:layout_height="44dp"
        android:hint=" Name"
        android:padding="10dp"
        android:background="@drawable/edittext_top_bg"
        android:inputType="textPersonName"
        android:textColorHint="#cccccc"
        android:drawableLeft="@drawable/user"

        android:layout_alignBottom="@+id/heartbeatbackground"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="356dp"
        android:layout_height="44dp"
        android:hint=" Username"
        android:padding="10dp"
        android:background="@drawable/edittext_top_bg"
        android:inputType="textPersonName"
        android:textColorHint="#cccccc"
        android:drawableLeft="@drawable/user"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/etname"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/etpassword"
        android:layout_width="356dp"
        android:layout_height="44dp"
        android:hint="Password"
        android:padding="10dp"
        android:background="@drawable/edittext_bottom_bg"
        android:inputType="textPassword"

        android:textColorHint="#cccccc"
        android:drawableLeft="@drawable/password"


        android:layout_below="@+id/etUsername"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="REGISTER"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:background="@drawable/loginbutton_bgtest2"
        style="@style/DefaultButtonText"/>


</RelativeLayout>
